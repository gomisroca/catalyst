{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./dist",
    "allowJs": true,
    "esModuleInterop": true,
    "strict": true,
    "lib": ["es2020"],
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"]
    },
    "types": ["node", "express"],
    "typeRoots": ["./node_modules/@types"]
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src/**/*.ts"],
  "files": ["src/app.ts"]
}
